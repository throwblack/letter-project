<body>
    <!-- Page 1: Confession -->
    <div id="page1" class="page active">
        <div class="hearts-trail" id="hearts-trail"></div>
        <div class="confession-text">Will you be my lover?</div>
        <div class="subtitle">(please say yes…)</div>
        <div class="buttons">
            <button id="yes-btn">Yes, I do</button>
            <button id="no-btn">No, leave me alone</button>
        </div>
    </div>

    <!-- Page 2: Flowers -->
    <div id="page2" class="page flower-page">
        <div class="flowers" id="flowers"></div>
        <div class="flower-text">These flowers are for you</div>
        <button class="continue-btn" id="continue-btn">Continue</button>
    </div>

    <!-- Page 3: Message -->
    <div id="page3" class="page message-page">
        <div class="message-text" id="message-text"></div>
    </div>

    <script>
        // Global variables
        let currentPage = 1;
        const pages = [document.getElementById('page1'), document.getElementById('page2'), document.getElementById('page3')];
        const noTexts = ["No, leave me alone", "Are you sure?", "Really sure?", "Think again…", "Sayang :(", "If you say no, I’ll be really sad…", "Very very sad…"];
        let noIndex = 0;
        let reactionCount = 0;
        const reactions = ["eh…", "hey…", "that’s mean", "please…"];

        // Hearts trail animation
        let hearts = [];
        function createHeart(x, y) {
            const heart = document.createElement('div');
            heart.className = 'heart';
            heart.textContent = '❤️';
            heart.style.left = `${x - 10}px`;
            heart.style.top = `${y - 10}px`;
            document.getElementById('hearts-trail').appendChild(heart);
            setTimeout(() => heart.remove(), 2000);
        }
        document.addEventListener('mousemove', (e) => {
            if (currentPage === 1) createHeart(e.clientX, e.clientY);
        });
        document.addEventListener('touchmove', (e) => {
            if (currentPage === 1) {
                const touch = e.touches[0];
                createHeart(touch.clientX, touch.clientY);
            }
        });

        // Page transitions
        function switchPage(toPage) {
            pages[currentPage - 1].classList.remove('active');
            setTimeout(() => {
                currentPage = toPage;
                pages[toPage - 1].classList.add('active');
                if (toPage === 2) startFlowers();
                if (toPage === 3) startTyping();
            }, 500);
        }

        // No button behavior
        document.getElementById('no-btn').addEventListener('mouseenter', moveNoBtn);
        document.getElementById('no-btn').addEventListener('click', moveNoBtn);
        function moveNoBtn() {
            if (noIndex < noTexts.length - 1) {
                noIndex++;
                document.getElementById('no-btn').textContent = noTexts[noIndex];
                // Move button randomly
                const btn = document.getElementById('no-btn');
                btn.style.position = 'absolute';
                btn.style.left = `${Math.random() * (window.innerWidth - 200)}px`;
                btn.style.top = `${Math.random() * (window.innerHeight - 100)}px`;
                // Show reaction
                if (reactionCount < reactions.length) {
                    const reaction = document.createElement('div');
                    reaction.className = 'reaction';
                    reaction.textContent = reactions[reactionCount];
                    reaction.style.left = `${Math.random() * (window.innerWidth - 100)}px`;
                    reaction.style.top = `${Math.random() * (window.innerHeight - 50)}px`;
                    document.body.appendChild(reaction);
                    setTimeout(() => reaction.remove(), 1000);
                    reactionCount++;
                }
            } else {
                document.getElementById('no-btn').style.display = 'none';
            }
        }

        // Yes button
        document.getElementById('yes-btn').addEventListener('click', () => switchPage(2));

        // Flowers animation
        function startFlowers() {
            const flowersContainer = document.getElementById('flowers');
            for (let i = 0; i < 20; i++) {
                setTimeout(() => {
                    const flower = document.createElement('div');
                    flower.className = 'flower';
                    flower.style.left = `${Math.random() * 100}%`;
                    flower.style.animationDelay = `${Math.random() * 3}s`;
                    flowersContainer.appendChild(flower);
                }, i * 200);
            }
        }

        // Continue to Page 3
        document.getElementById('continue-btn').addEventListener('click', () => switchPage(3));

        // Typing animation
        function startTyping() {
            const message = `My dearest,\n\nI’ve been wanting to tell you this for so long.\nYou make my heart skip a beat every time I see you.\nWill you be mine forever?\n\nWith all my love.`;
            const textElement = document.getElementById('message-text');
            let index = 0;
            function type() {
                if (index < message.length) {
                    textElement.textContent += message[index];
                    index++;
                    setTimeout(type, 100);
                    if (message[index - 1] === '\n') setTimeout(type, 500); // Pause at new lines
                }
            }
            type();
        }
    </script>
</body>
</html>
